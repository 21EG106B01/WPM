extends layout
include _includes/sharedHTMLfunctions

block content
	.row.banner
		.col-12
			h1= product.company
				small &nbsp;
					#{product.name}
	.row
		.col-12.col-lg-9
			.row
				.col-12.col-md-6
					.card.card-primary
						.card-block
							h2.card-title Product Images
							img.img-fluid.rounded(src= product.imgSrc)
					p.rating
						+outRating(product.rating)
					p= product.smalDesc
					each tag in product.tags
						| &nbsp;
						span.badge.badge-warning= tag
				.col-12.col-md-6
					.card.card-primary
						.card-block
							h2.card-title Product Description
							p.card-text= product.desc
					.card.card-primary
						.card-block
							h2.card-title Quantity
							each pack in product.quantity
								p.card-text.qty= pack.qty
									span.qprice= pack.price

			.row
				.col-12
					.card.card-primary.review-card
						.card-block
							a.btn.btn-primary.float-right(href='/location/review/new') Add review
							h2.card-title Customer reviews
							each review in reviews
								.row.review
									.col-12.no-gutters.review-header
										span.rating
											+outRating(review.rating)
											| &nbsp;
										span.reviewAuthor=  review.author
										| &nbsp;
										small.reviewTimestamp=  review.date
									.col-12
										p= review.content

		.col-12.col-lg-3
			p.lead= sidebar.lead
			p= sidebar.last